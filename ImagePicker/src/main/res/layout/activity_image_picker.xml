<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--标题-->
    <FrameLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_layout_height"
        android:background="@color/image_picker_colorPrimary">

        <ImageView
            android:id="@+id/titleClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start|center_vertical"
            android:scaleType="center"
            android:src="@drawable/public_icon_close_black" />

        <TextView
            android:id="@+id/titleSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foreground="?selectableItemBackground"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/titleNext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:text="@string/image_picker_next_btn_text1"
                android:textColor="#F772BB"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titleNextNormal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/picker_bg_next_selector"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </FrameLayout>

    </FrameLayout>

    <!--内容-->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>